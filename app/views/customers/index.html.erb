<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
