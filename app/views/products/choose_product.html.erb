<div class="col-sm-6 col-md-6 col-lg-6">
  <h1>Choose Products</h1>
  <%= form_for(:product, url: orders_path()) do |f| %>
    <div class="field">
      <%= f.select :product_id, options_for_select(@products.collect {|p| [ "#{p.name}   --    Rs.#{p.price}", p.id ] }), {}, {:multiple => true, class: "form-control",required: true } %>
      <%= f.hidden_field :customer_id, :value => params[:customer_id] %>
    </div>
    <button type="submit" class="btn btn-default">Next</button>
  <% end %>
</div>
<div class="col-sm-3 col-md-3 col-lg-3">
</div>